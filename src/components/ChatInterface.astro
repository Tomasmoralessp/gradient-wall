<div class="hidden w-full md:w-72 mx-auto md:mx-0 shadow-lg">
  <div
    class="bg-white dark:bg-black/20 backdrop-blur-lg rounded-2xl p-3 shadow-lg border border-white/30 dark:border-white/10"
  >
    <div class="h-24 overflow-y-auto space-y-3 p-2">
      <div class="flex items-start space-x-2">
        <div class="p-2 bg-gray-400/10 dark:bg-white/10 rounded-xl">
          <p class="text-gray-900 dark:text-white text-sm font-medium">
            ¿Cómo te gustaría que fuera tu gradiente?
          </p>
        </div>
      </div>
    </div>
    <div
      class="flex items-center space-x-2 pt-2 border-t border-white/30 dark:border-white/10"
    >
      <input
        type="text"
        id="promptInput"
        placeholder="Por ejemplo: como un atardecer en la playa..."
        class="flex-1 bg-gray-400/20 dark:bg-white/10 text-gray-900 dark:text-white rounded-lg px-3 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-white/40 dark:focus:ring-white/20 placeholder-gray-800 dark:placeholder-white/80"
      />
      <button
        id="sendPrompt"
        class="bg-gray-400 dark:bg-white/20 hover:bg-gray-500 dark:hover:bg-white/30 text-gray-900 dark:text-white rounded-lg p-1.5 transition-colors"
        aria-label="Enviar mensaje"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke-width="1.5"
          stroke="currentColor"
          class="w-4 h-4"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5"
          ></path>
        </svg>
      </button>
    </div>
  </div>
</div>

<script>
  const promptInput = document.getElementById("promptInput");
  const sendPrompt = document.getElementById("sendPrompt");

  sendPrompt?.addEventListener("click", () => {
    const prompt = promptInput?.value;
    if (prompt) {
      console.log("Prompt enviado:", prompt);
      // Aquí irá la lógica de la IA para generar los colores
    }
  });

  promptInput?.addEventListener("keypress", (e) => {
    if (e.key === "Enter") {
      sendPrompt?.click();
    }
  });
</script>
